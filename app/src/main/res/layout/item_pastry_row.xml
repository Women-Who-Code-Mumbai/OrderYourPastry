<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_color_selector"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_pastry"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pastry_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="17sp"
            app:layout_constraintLeft_toLeftOf="@id/iv_pastry"
            app:layout_constraintRight_toRightOf="@id/iv_pastry"
            app:layout_constraintTop_toBottomOf="@+id/iv_pastry" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
